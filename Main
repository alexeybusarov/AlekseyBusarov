#include <TXLib.h>
#include <stdio.h>
#include <math.h>
int main ()
        {
            double a = 0, b = 0, c = 0;
            scanf ("%lg %lg %lg", &a, &b, &c);
            double x1 = 0, x2 = 0, dt = 0;
            dt = b*b - 4*a*c;
            if (dt < 0)
                {
                    printf ("Корней нет");
                }
            if (dt == 0)
                {
                    x1 = -b/(2*a);
                    printf ("Корень уравнения равен %lg", x1);
                }
            if (dt > 0)
                {
                    x1 = (-b + sqrt(dt))/(2*a);
                    x2 = (-b - sqrt(dt))/(2*a);
                    printf ("Корни уравнения равны %lg и %lg", x2, x1);
                }
        }                                       
